{
  "extends": "@fuels/ts-config/base.json",
  "compilerOptions": {
    "types": ["@fuel-wallet/sdk", "jest"],
    "plugins": [{ "name": "next" }],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "exclude": ["**/dist", "**/build", "node_modules", "**/node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
